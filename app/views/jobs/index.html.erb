  <div class="alert alert-info" role="alert"> <h3>New Jobs <span class="badge bg-secondary">New</span></h3></div>
   
  <div class="container">   

    
      
   
    <% @jobs.to_ary.in_groups_of(2) do |job1, job2| %>
  
    <div class="row p-2">
      
      <div class="col">
        <div class="card">
          
          <img class="card-img-top">

          <% if job1.image.attached? %>
          <p> 
            <%= image_tag job1.image, style: "width: 500px" %>
          </p>
          
          <%end%> 
          
      
          <div class="card-body">
            <h5 class="card-title"> <%= "Job_Id: #{job1.id}"%></h5>
            <p class="card-text"><%= "Job_Title: #{job1.job_title}"%></p>
            <p class="card-text"><%= "Job_Company: #{job1.company}" %></p>
            <p class="card-text"><%= "Job_Url: #{job1.url}" %></p>
            <p class="card-text"><%= "Job_Requirment: #{job1.requirment}" %></p>

            <p class="card-text"><%= "Job_summary: #{job1.summmary}" %></p>
            <p class="card-text"><%= "Job_Responsibility: #{job1.responsibily}" %></p>
            <p>
              <%= link_to "Show this job", job1 %>
    </p>   
          </div>
        </div>
      
    
    </div>
      <% if job2.present? %>
      
        <div class="col">
          <div class="card">

            <img class="card-img-top">

          <% if job2.image.attached? %>
          <p> 
            <%= image_tag job2.image, style: "width: 500px" %>
          </p>
          
          <%end%> 
          
           
            <div class="card-body">
                <h5 class="card-title"> <%= "Job_Id: #{job2.id}"%></h5>
            <p class="card-text"><%= "Job_Title: #{job2.job_title}"%></p>
            <p class="card-text"><%= "Job_Company: #{job2.company}" %></p>
            <p class="card-text"><%= "Job_Url: #{job2.url}" %></p>
            <p class="card-text"><%= "Job_Requirment: #{job2.requirment}" %></p>

            <p class="card-text"><%= "Job_summary: #{job2.summmary}" %></p>
            <p class="card-text"><%= "Job_Responsibility: #{job2.responsibily}" %></p>
            <p>
                  <%= link_to "Show this job", job2 %>
             </p>
            </div>
          </div>
        </div>

      <% end %>
    
  
</div>
  <% end %>
  <% if current_user.present? %>
    <div class= "btn btn-outline-primary">  <%= link_to "New job", new_job_path %>
    </div>
  <% end %>




